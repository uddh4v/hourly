{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["src/components/*"],
      "@theme/*": ["src/theme/*"],
      "@store/*": ["src/store/*"],
      "@assets/*": ["src/assets/*"]
    },
    "strict": true, // this includes `noImplicitAny` as part of strict mode
    "noImplicitAny": true
  }
}
